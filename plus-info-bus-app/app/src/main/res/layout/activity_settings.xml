<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include
        layout="@layout/content_settings"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/connectionText"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="198dp"
        android:text="@string/setting_connection" />

    <TextView
        android:id="@+id/connectionStatus"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/connectionText"
        android:layout_toEndOf="@+id/connectionText" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/connectionText"
        android:layout_below="@+id/connectionText"
        android:text="@string/setting_location" />

    <TextView
        android:id="@+id/locationStatus"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connectionText"
        android:layout_toEndOf="@+id/connectionText" />


</RelativeLayout>